<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/itemNewsTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/textColor"
        tools:text="昵称" />

    <ImageView
        android:id="@+id/itemNewsPictureIv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/itemNewsTitleTv"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/itemNewsPictureIv">

        <TextView
            android:id="@+id/itemNewsSourceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/textGreyColor"
            tools:text="网易新闻"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/itemNewsRelayTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/textGreyColor"
            tools:text="100评论"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/itemNewsTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/textGreyColor"
            tools:text="2018-11-21"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</RelativeLayout>